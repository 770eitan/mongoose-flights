<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/new.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id = "new-form" action="/flights" method="POST">
    <label>Airline
      <select name="airline">
        <option value="American">American</option>
        <option value="Southwest">Southwest</option>
        <option value="United">United</option>
      </select>
    </label><br>
    <label>Airport:
      <select name="airport">
        <option value="AUS">AUS</option>
        <option value="DFW">DFW</option>
        <option selected value="DEN">DEN</option>
        <option value="LAX">LAX</option>
        <option value="SAN">SAN</option>
      </select>
    </label><br>
    <label>Flight Number
        <label for="flightNo"> (between 10 and 9999):</label>
  <input type="number" id="flightNo" name="flightNo" min="10" max="9999"><br><br>
      </select>
    </label><br>
    <label for="departs">Choose a time for your departure:</label>

    <input type="datetime-local" id="departs"
           name="departs" value="2022-06-12T19:30"
           min="2018-06-07T00:00" max="2023-0-14T00:00">
    

    <!-- <label>Cast (separate actors with commas):
      <input type="text" name="cast">
    </label><br>
    <label>Now Showing:
      <input type="checkbox" name="nowShowing" checked>
    </label><br> -->
    <button type="submit">Add flight</button>
  </form>
</main>
<%- include("../partials/footer") %>